<Settings>
  <Sitecore>
    <Processing>
      <Services>
        <DemoAgent>
          <Type>Demo.Foundation.ProcessingEngine.Agents.DemoAgent, Demo.Foundation.ProcessingEngine</Type>
          <As>Sitecore.Processing.Engine.Abstractions.IAgent, Sitecore.Processing.Engine.Abstractions</As>
          <LifeTime>Transient</LifeTime>
